            <string>/// Timers

// spells
s = ds_map_find_first(spells);
for (var i = 0; i &lt; ds_map_size(spells); i++)
{
    val = ds_map_find_value(spells, s);
    
    if (val &gt; 0)
        ds_map_replace(spells, s, val - 1);
    if (val == 0)
        ds_map_delete(spells, s);
        
    s = ds_map_find_next(spells, s);
}

// spawn
if (spawn &lt; 1.0)
    spawn += 0.025;
    
// cooldown
if (cooldown &gt; 0)
    cooldown -= 1;
    
// gravity
if (z &gt; 0) 
    zspeed -= 0.25;
