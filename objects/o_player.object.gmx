            <string>/// Pickup Item
pickup = instance_nearest(x, y, o_item);
if (point_distance_3d(x, y, z, pickup.x, pickup.y, pickup.z) &lt; 16)
{
    switch(color_get_hue(pickup.color))
    {
        // red
        case 0:
            if (hp &lt; max_hp)
            {
                pickup.fade = true;
                ds_map_add(spells, "regen", 5 * room_speed);
            }
            break;
        // green
        case 85:
            break;
        // blue
        case 170:
            if (mana &lt; max_mana)
            {
                pickup.fade = true;
                ds_map_add(spells, "mana", 5 * room_speed);
            }
            break;
        // yellow
        case 43:
            break;
    }
}
